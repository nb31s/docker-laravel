ARG DOCKER_POSTGRES_VERSION
ARG DOCKER_POSTGRES_DATABASE
ARG DOCKER_POSTGRES_USER
ARG DOCKER_POSTGRES_PASSWORD

FROM postgres:${DOCKER_POSTGRES_VERSION}-alpine

ENV ENV TZ=UTC \
      POSTGRES_DATABASE=${DOCKER_POSTGRES_DATABASE} \
      POSTGRES_USER=${DOCKER_POSTGRES_USER} \
      POSTGRES_PASSWORD=${DOCKER_POSTGRES_PASSWORD}